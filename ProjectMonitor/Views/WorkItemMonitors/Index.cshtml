@model IEnumerable<ProjectMonitor.Models.WorkItemMonitor>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.WorkItemUsed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkItemDelivered)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkItemRemaining)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkItemType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.WorkItemUsed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WorkItemDelivered)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WorkItemRemaining)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WorkItemType.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
